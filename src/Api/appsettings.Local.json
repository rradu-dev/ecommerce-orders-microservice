{
  "spring": {
    "application": {
      "name": "orders-service"
    },
    "cloud": {
      "config": {
				"enabled": false,
        "healthEnabled": true,
        "discoveryEnabled": true,
        "uri": "http://localhost:9999/config-service",
        "validateCertificates": false
      }
    }
	},
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Elasticsearch",
              "Args": {
                "nodeUris": "http://localhost:9200",
								"indexFormat": "orders.logs-{0:yyyy.MM.dd}",
                "restrictedToMinimumLevel": "Information",
                "autoRegisterTemplate": true,
                "overwriteTemplate": false,
                "connectionTimeout": 5,
                "emitEventFailure": "WriteToSelfLog",
                "numberOfShards": 2,
                "numberOfReplicas": 1,
                "customFormatter": "Serilog.Formatting.Elasticsearch.ExceptionAsObjectJsonFormatter, Serilog.Formatting.Elasticsearch"
              }
            },
            {
              "Name": "Console"
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "Properties": {
      "ApplicationName": "orders-service",
      "Environment": "Development"
    }
  },
  "ConnectionStrings": {
    "orders": "Host=localhost;Database=orders;Username=root;Password=root"
  },
  "consul": {
    "host": "localhost",
    "port": 8500,
    "discovery": {
      "enabled": false,
      "register": false,
      "deregister": true,
      "port": "5005",
      "ipAddress": "host.docker.internal",
      "preferIpAddress": true,
      "useAspNetCoreUrls": false,
      "serviceName": "orders-service",
      "registerHealthCheck": true,
      "healthCheckPath": "/health",
      "heartBeat": {
				"enabled": false
			},
			"tags": [
				"urlprefix-/orders-service strip=/orders-service"
			]
    }
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "orders-service",
    "sender": "udp",
    "udpHost": "localhost",
    "udpPort": 6831,
    "maxPacketSize": 0,
    "sampler": "const",
    "excludePaths": ["/", "/health", "/metrics"]
  },
  "prometheus": {
    "enabled": false,
    "endpoint": "/metrics"
  },
  "CorsPolicies": {
    "Default": {
      "Origins": [ "*" ],
      "Headers": [ "*" ],
      "Methods": [ "*" ],
      "ExposedHeaders": [ "*" ],
      "SupportsCredentials": true
    }
  },
  "AllowedHosts": "*"
}
